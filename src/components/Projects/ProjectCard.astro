---
import ProjectLink from "./ProjectLink.astro"

export interface Props {
  title: string
  description: string
  techStack: string[]
  hrefWeb: string
  hrefCode: string
}

const { description, hrefCode, hrefWeb, techStack, title } = Astro.props
---

<li class="flex list-none rounded-lg bg-gradient-to-tr from-primary-300 to-secondary-200 p-1">
  <div class="w-full rounded-md bg-white/95 py-4 px-5 leading-normal">
    <div class="flex flex-row items-center justify-between">
      <h3>
        <a
          href={hrefWeb}
          target="_blank"
          rel="noopener noreferrer"
          class="text-lg font-medium outline-none transition-all duration-300 hocus:text-secondary-300"
        >
          {title}
        </a>
      </h3>
      <div class="flex flex-row gap-1">
        <ProjectLink title={title} href={hrefWeb} />
        <ProjectLink title={`${title} code`} href={hrefCode} isCode />
      </div>
    </div>
    <p class="pt-3 pb-4">
      {description}
    </p>
    <ul
      role="list"
      class="flex flex-row flex-wrap gap-y-1 gap-x-3 font-mono text-xs text-normal-600"
    >
      {techStack.map((tech: string) => <li>{tech}</li>)}
    </ul>
  </div>
</li>
